<% if session[:current_user_id].present? && session[:current_username].present? then %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Post</title>
    <link rel="stylesheet" href="style.css">
    <script src="script.js"></script>
  </head>
  <body>


<header>
  <h1>xBlog</h1>
<nav>
    <%= link_to 'Home', home_path %>
    <div class="it"><%= link_to 'Post', post_path %></div>
    <%= link_to 'Logout', logout_path, :method => :delete %>
</nav>
</header>


<section>
<h2>Post</h2>

<%if flash[:error].present? %>
<%= content_tag :div, flash[:error], class: "error_msg" %>
<% end %>

<%= form_for :posts, url: post_path do |f| %>
  <p>

    <%= f.label :title, "Title" %><br>
    <%= f.text_field :title, :value => flash[:title] %>
  </p>
 
  <p>
    <%= f.label :author, "Author" %><br>
    <%if flash[:author].present? %>
    <%= f.text_field :author, :value => flash[:author] %>
    <% else %>
    <%= f.text_field :author, :value => session[:current_username] %>
    <% end %>
  </p>

   <p>
    <%= f.label :content, "Post" %><br>
    <%= f.text_area :content, :value => flash[:content]  %>
  </p>
 
  <p>
    <%= f.submit "Post" %>
  </p>
<% end %>
</section>


<footer>
barlowat@ORNL.gov 
</footer>

  </body>
</html>
<% else 

controller.redirect_to :home

 end %>