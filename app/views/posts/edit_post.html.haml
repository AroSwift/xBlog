- if !logged_in? then
  %h2
    %center.daccess
      You don't have access to this page.
- else 

  - content_for :current_page do
    Edit Post
  %br
  
  = form_for :posts, url: edit_post_path(:title => params[:title], :author => session[:current_username], :content => params[:content], :id => params[:id]), :method => :put do |f|
    %p
      = f.label :title, "Title"
      %br/
      = f.text_field :title, :value => params[:title]
    %p
      = f.label :author, "Author"
      %br/
      = f.text_field :author, :readonly => true, :value => params[:author]
    %p
      = f.label :pcontent, "Post"
      %br/
      = f.text_area :content, :maxlength => 1500, :value => params[:content]
    %p
      = f.submit "Post"