- if !logged_in? then
  %h2
    %center.daccess
      You don't have access to this page.
- else 

  - content_for :current_page do
    Edit Post
  %br
  
  = form_for @post do |f|
    %p
      = f.label :title, "Title"
      %br/
      = f.text_field :title, :maxlength => 40, :value => params[:title] || @post.title
    %p
      = f.label :author, "Author"
      %br/
      = f.text_field :author, :maxlength => 12, :readonly => true, :value => params[:author] || @post.author
    %p
      = f.label :pcontent, "Post"
      %br/
      = f.text_area :content, :maxlength => 1500, :value => params[:content] || @post.content
    %p
      = f.submit "Post"