- if !logged_in? then
  %h2
    %center.daccess
      You don't have access to this page.
- else 

  - content_for :current_page do
    Account
  %br/
  %article.posts
    %center  
      %p.title
        = link_to 'Edit Username or Password', admin_edit_users_path(:username => session[:current_username], :password => session[:current_password], :admin => session[:admin], :id => session[:current_user_id]), class: "acc_link"
      - if !admin?  
        %p.title   
          = link_to 'Request to be an admin', admin_edit_users_path, class: "acc_link"  
      %p.title   
        = link_to 'Delete Account', admin_edit_users_path, class: "acc_link delete"    