- if !logged_in? then
  %h2
    %center.daccess
      You don't have access to this page.
- else 

  - content_for :current_page do
    Account
  %br/
  %article.posts
    %center  
      %p.title
        = link_to 'Edit Username or Password', admin_edit_users_path(:username => session[:current_username], :password => session[:current_password], :admin => session[:admin], :id => session[:current_user_id], :posts => 'true'), class: "acc_link"
      - if !admin?  
        %p.title   
          = link_to 'Request to be an admin', account_path, :method => :put, class: "acc_link"  
      %p.title   
        = link_to 'Delete Account', admin_edit_users_path(:dusername => session[:current_username], :dpassword => session[:current_password], :dadmin => session[:admin], :dtype => 'user'), :method => :delete, :data => {:confirm => "Are you sure you want to delete your account?"}, class: "acc_link delete"
      %p.title   
        = link_to 'Delete Account and Posts', admin_edit_users_path(:dusername => session[:current_username], :dpassword => session[:current_password], :dadmin => session[:admin], :dtype => 'all'), :method => :delete, :data => {:confirm => "Are you sure you want to delete your account and all your posts?"}, class: "acc_link delete"