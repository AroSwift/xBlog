%section
  %h2 Home
  - if !params[:errors].nil?
    - params[:errors].each do |msg|
      = content_tag :div, msg, class: "error_msg"
  - if flash[:errors].present?
    = content_tag :div, flash[:errors], class: "error_msg"
  - Post.all.order("id desc LIMIT 10").each do |post|
    %article.posts
      %p.title
        = post.title
        by
        \#{post.author}
        - if session[:current_user_id].present? && session[:current_username].present? then
          - if post.author == session[:current_username] then
            = link_to 'Delete', post_path(:dtitle => post.title, :dauthor => post.author, :dcontent => post.content), :method => :delete, class: "dpost"
            = link_to 'Edit', edit_post_path(:ptitle => post.title, :pauthor => post.author, :pcontent => post.content, :id => post.id), class: "pedit"              
      %p.content= post.content