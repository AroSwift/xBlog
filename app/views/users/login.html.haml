- if admin? || super_admin? then
  %h2
    %center.daccess
      You don't have access to this page.
- else 

  - content_for :current_page do
    Login
  %br

  = form_for :login, url: login_path do |f|
    %p
      = f.label :username, "Username"
      %br/
      = f.text_field :username, :maxlength => 12, :value => flash[:username]
    %p
      = f.label :password, "Password"
      %br/
      = f.password_field :password, :maxlength => 20, :value => flash[:password]
    %p
      = f.submit "Login"
  %br/
  = link_to "Don't have an account? Sign up now!", signup_path